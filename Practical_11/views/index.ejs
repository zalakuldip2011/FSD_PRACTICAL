    <script>
        // Simulate real-time updates
        function updateStats() {
            const statNumbers = document.querySelectorAll('.stat-number');
            statNumbers.forEach(stat => {
                if (stat.textContent.includes('$')) {
                    // Update revenue
                    const current = parseInt(stat.textContent.replace(/[^0-9]/g, ''));
                    const newValue = current + Math.floor(Math.random() * 100);
                    stat.textContent = '$' + newValue.toLocaleString();
                } else if (stat.textContent.includes('%')) {
                    // Update percentage
                    const current = parseFloat(stat.textContent);
                    const change = (Math.random() - 0.5) * 0.2;
                    const newValue = Math.max(0, Math.min(100, current + change));
                    stat.textContent = newValue.toFixed(1) + '%';
                } else if (!stat.textContent.includes('$') && !stat.textContent.includes('%')) {
                    // Update count
                    const current = parseInt(stat.textContent.replace(/[^0-9]/g, ''));
                    const change = Math.floor(Math.random() * 10) - 5;
                    const newValue = Math.max(0, current + change);
                    stat.textContent = newValue.toLocaleString();
                }
            });
        }

        // Update stats every 10 seconds
        setInterval(updateStats, 10000);
    </script>
